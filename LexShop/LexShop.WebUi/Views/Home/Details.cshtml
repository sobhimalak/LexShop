@model Photogenix.Core.Models.Product

@{
    ViewBag.Title = Model.Name + "Details";
}

<h2>@Html.DisplayFor(model => Model.Name)</h2>



<h2>Details</h2>

<div>
    <div class="col-md-2">
        <img src="~/Content/ProductImages/@Model.Image" class="img-responsive"/>
    </div>
    <div class="col-md-10">
        <h4>Product</h4>
        <hr />
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                $@Html.DisplayFor(model => model.Price)
            </dd>

            <dt></dt>
            <dd> <a href="@Url.Action("AddToBasket", "Basket", new { id =Model.Id} )" class="btn btn-danger">Add To Basket</a>  </dd>
            @Html.ActionLink("Back to List", "Index")
        </dl>
    </div>
</div>
<div class="col-md-12" clearfix></div>
